<%- include('../partials/header') %>

<table id="recipe-list">
  <thead>
    <tr>
      <th>Name:</th>
      <th></th>
      <th>Diet:</th>
      <th>More Info:</th>
      <th>Update Recipe</th>
      <th>Delete Recipe</th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(r) { %>
      <tr>
        <td><%= r.name %></td>
        <td><img src="<%= r.pic %>" id="food-pic"></td>
        <td><%= r.diet %></td>
        <td><a href="/recipes/<%= r._id %>">More</a></td>
        <% if (user && user._id.equals(r.user)) { %>
          <td><a href=""></a></td>
          <form action="/recipes/<%= r._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button>
          </form>
        <% } %>
        <% }); %>
    </tbody>
  </table>
  <a href="/recipes/new">Add Recipe</a>

<%- include('../partials/footer') %>

    