<%- include('../partials/header') %>

<form action="/recipes/index" method="POST" id="new-recipe-form">
    <label>Name:</label>
    <input type="text" name="name" required>
    <br>
    <label>Ingredients:</label>
    <textarea name="ingredients" cols="30" rows="5"></textarea>
    <br>
    <label>Instructions:</label>
    <textarea name="instructions" cols="30" rows="5"></textarea>
    <br>
    <label>Special Diet:</label>
    <select name="diet">
        <option value="None">None</option>
        <option value="Vegan">Vegan</option>
        <option value="Vegetarian">Vegetarian</option>
        <option value="Pescatarian">Pescatarian</option>
    </select>
    <br>
    <input class="input-button" type="submit" value="Add Recipe">
</form> 

<%- include('../partials/footer') %>

